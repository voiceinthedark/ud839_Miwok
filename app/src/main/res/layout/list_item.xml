<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tan_background"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/word_image_view"
        style="@style/ImageStyle" />

    <LinearLayout
        android:id="@+id/word_list_view"
        style="@style/ListItemStyle"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/ListItemStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/word_miwok"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="lutti" />

            <TextView
                android:id="@+id/word_english"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                tools:text="one" />

        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/image_play_sound"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="@string/content_play_sound"
            android:src="@drawable/ic_play_sound" />
    </LinearLayout>

</LinearLayout>